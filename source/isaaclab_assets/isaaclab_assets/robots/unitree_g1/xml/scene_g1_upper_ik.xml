<mujoco model="G1 Mink IK">
  <include file="g1_upper_ik.xml" />

  <statistic center="0.2 0 0.9" extent="0.8" meansize="0.04" />

  <visual>
    <headlight diffuse=".8 .8 .8" ambient=".2 .2 .2" specular="1 1 1" />
    <global azimuth="-160" elevation="-20" />
  </visual>

  <asset>
    <texture type="skybox" builtin="gradient" rgb1="1 1 1" rgb2="1 1 1" width="800" height="800" />
    <texture type="2d" name="groundplane" builtin="checker" rgb1="1 1 1" rgb2="1 1 1" width="300" height="300" />
    <material name="groundplane" texture="groundplane" texuniform="true" texrepeat="5 5" />
  </asset>

  <worldbody>
    <geom name="floor" size="0 0 0.01" type="plane" material="groundplane" contype="1" conaffinity="2" />

    <!-- Mocap bodies for IK targets -->
    <body name="left_hand_target" pos="0.3 0.2 1.0" quat="0 1 0 0" mocap="true">
      <geom type="box" size=".04 .04 .04" contype="0" conaffinity="0" rgba=".6 .3 .3 .5" />
    </body>
    <body name="right_hand_target" pos="0.3 -0.2 1.0" quat="0 1 0 0" mocap="true">
      <geom type="box" size=".04 .04 .04" contype="0" conaffinity="0" rgba=".6 .3 .3 .5" />
    </body>
    <body name="left_elbow_target" pos="0.2 0.15 0.9" mocap="true">
      <geom type="sphere" size=".03" contype="0" conaffinity="0" rgba=".2 .8 .2 .5" />
    </body>
    <body name="right_elbow_target" pos="0.2 -0.15 0.9" mocap="true">
      <geom type="sphere" size=".03" contype="0" conaffinity="0" rgba=".2 .8 .2 .5" />
    </body>
  </worldbody>

  <keyframe>
    <!-- Arm joints only: 14 values (7 left + 7 right) -->
    <key name="home" qpos="
      0.2 0.2 0 1.28 0 0 0
      0.2 -0.2 0 1.28 0 0 0
    " />
  </keyframe>
</mujoco>
